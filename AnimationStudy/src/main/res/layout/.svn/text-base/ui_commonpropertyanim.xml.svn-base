<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <ImageView
        android:id="@+id/sdi_showanim_iv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ferriswheel" />
    <RelativeLayout
        android:id="@+id/sdi_policebox_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <ImageView
            android:id="@+id/sdi_policebox_iv"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:cropToPadding="true"
            android:onClick="showFlipOnVertical"
            android:src="@mipmap/policebox" />
        <ImageView
            android:id="@+id/sdi_policeboxlight_iv"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:alpha="0.0"
            android:cropToPadding="true"
            android:onClick="showFlipOnVertical"
            android:src="@mipmap/policeboxlight" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/sdi_showtrananim_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:cropToPadding="true"
        android:onClick="startTransAnimation"
        android:src="@mipmap/ferriswheel"/>
    <Button
        android:id="@+id/sdi_filponvertical_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sdi_changeimg_cb"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="120dp"
        android:onClick="showFlipOnVertical"
        android:text="@string/sds_btn_filponvertical" />
    <CheckBox
        android:id="@+id/sdi_changeimg_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/sds_cb_changepoliceboximg"
        android:textAllCaps="false" />
    <CheckBox
        android:id="@+id/sdi_showtrananimimg_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sds_cb_showtrananimimg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
