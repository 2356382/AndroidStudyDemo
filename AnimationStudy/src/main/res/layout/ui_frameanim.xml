<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cheng.animationstudy.activity.UiFrameAnim">

    <Button
        android:id="@+id/sdi_startanim_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="startAnim"
        android:text="@string/sds_btn_startanim"/>

    <ImageView
        android:id="@+id/sdi_showframeanim_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:id="@+id/sdi_loadanimbyxml_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/sds_cb_loadxmlanim"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/sdi_stopanim_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdi_startanim_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="stopAnim"
        android:text="@string/sds_btn_stopanim"/>
</RelativeLayout>
