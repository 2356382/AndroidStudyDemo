<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/sdi_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc000000" />
    <com.cheng.animationstudy.customview.baiduread.RippleLayout
        android:id="@+id/sdi_close_rl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center"
        android:alpha="0.9"
        ripple:rv_color="@color/grey_normal"
        ripple:rv_inner_radius="@dimen/bookshelf_add_btn">
        <ImageButton
            android:id="@+id/iv_close"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/sdd_bdr_selector_grey_ball"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@mipmap/ic_add" />
    </com.cheng.animationstudy.customview.baiduread.RippleLayout>
    <LinearLayout
        android:id="@+id/import_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/sdi_close_rl"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="-20dp">
        <com.cheng.animationstudy.customview.baiduread.RippleLayout
            android:id="@+id/sdi_firstball_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp"
            ripple:rv_color="@color/rippelColor"
            ripple:rv_inner_radius="@dimen/bookshelf_scanner_btn"
            ripple:rv_type="simpleRipple">
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@drawable/sdd_bdr_selector_green_ball"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_shop" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/myyuedu_import_freezone"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </com.cheng.animationstudy.customview.baiduread.RippleLayout>
        <com.cheng.animationstudy.customview.baiduread.RippleLayout
            android:id="@+id/sdi_pc_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp"
            ripple:rv_color="@color/rippelColor"
            ripple:rv_inner_radius="@dimen/bookshelf_scanner_btn"
            ripple:rv_type="simpleRipple">
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@drawable/sdd_bdr_selector_green_ball"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_pc" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/myyuedu_import_pc"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </com.cheng.animationstudy.customview.baiduread.RippleLayout>
        <com.cheng.animationstudy.customview.baiduread.RippleLayout
            android:id="@+id/sdi_sdcard_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp"
            ripple:rv_color="@color/rippelColor"
            ripple:rv_inner_radius="@dimen/bookshelf_scanner_btn"
            ripple:rv_type="simpleRipple">
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@drawable/sdd_bdr_selector_green_ball"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_sdcard" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/myyuedu_import_sdcard"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </com.cheng.animationstudy.customview.baiduread.RippleLayout>
    </LinearLayout>
</merge>