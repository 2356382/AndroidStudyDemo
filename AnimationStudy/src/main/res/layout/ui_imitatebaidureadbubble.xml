<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.cheng.animationstudy.customview.baiduread.RippleLayout
        android:id="@+id/sdi_ripplelayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="bottom|center"
        android:alpha="0.9"
        ripple:rv_color="@color/rippelColor3"
        ripple:rv_inner_radius="@dimen/bookshelf_add_btn">
        <ImageButton
            android:id="@+id/sdi_add_ibtn"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_centerInParent="true"
            android:background="@drawable/sdd_bdr_selector_green_ball"
            android:contentDescription="@null"
            android:scaleType="center"
            android:src="@mipmap/ic_add"/>
    </com.cheng.animationstudy.customview.baiduread.RippleLayout>
    <com.cheng.animationstudy.customview.baiduread.ImportMenuView
        android:layout_gravity="bottom|center"
        android:id="@+id/sdi_importmenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.cheng.animationstudy.customview.baiduread.ImportMenuView>
</merge>
