<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/sdi_layoutanim_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="@string/sds_btn_layoutanim"
        android:textAllCaps="false"
        android:onClick="toLayoutAnim"/>

    <Button
        android:id="@+id/sdi_layoutanimdefault_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdi_layoutanim_btn"
        android:layout_alignParentStart="true"
        android:text="@string/sds_btn_layoutanimdefault"
        android:textAllCaps="false"
        android:onClick="toLayoutAnimDefault"/>

    <Button
        android:id="@+id/sdi_layouthideshow_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdi_layoutanimdefault_btn"
        android:layout_alignParentStart="true"
        android:text="@string/sds_btn_layoutanimhideshow"
        android:textAllCaps="false"
        android:onClick="toLayoutHideShow"/>

    <Button
        android:id="@+id/sdi_animstreamcontrol_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdi_layouthideshow_btn"
        android:layout_alignParentStart="true"
        android:text="@string/sds_btn_animstreamcontrol"
        android:onClick="toAnimStreamControl"/>

    <Button
        android:id="@+id/sdi_commonpropertyanim_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sdi_animstreamcontrol_btn"
        android:layout_alignParentStart="true"
        android:text="@string/sds_btn_commonpropertyanim"
        android:onClick="toCommonPropertyAnim"/>

    <Button
        android:id="@+id/sdi_objectpropertyanim_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdi_commonpropertyanim_btn"
        android:layout_alignParentStart="true"
        android:text="@string/sds_btn_objectpropertyanim"
        android:textAllCaps="false"
        android:onClick="toObjectPropertyAnim"/>
    <Button
        android:id="@+id/sdi_animbypath_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdi_objectpropertyanim_btn"
        android:layout_alignParentStart="true"
        android:text="@string/sds_btn_animbypath"
        android:textAllCaps="false"
        android:onClick="toAnimByPath"/>
</RelativeLayout>
