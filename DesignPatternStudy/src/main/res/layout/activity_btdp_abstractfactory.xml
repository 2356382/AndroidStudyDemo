<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cheng.bigtalkdesignpatterns.abstractfactory.BTDPAbstractFactoryActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="抽象工厂"
        android:id="@+id/textView15" />

    <Button
        android:id="@+id/bti_test1_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/bti_test2_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test2"
        android:layout_below="@id/bti_test1_btn"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:onClick="onClick" />

    <Button
        android:id="@+id/bti_test3_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test3"
        android:layout_below="@id/bti_test2_btn"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:onClick="onClick" />

</RelativeLayout>
