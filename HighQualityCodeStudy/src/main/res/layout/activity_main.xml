<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/sdi_demotips_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sds_demotips" />

    <Button
        android:id="@+id/sdi_i151suggest_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdi_demotips_tv"
        android:text="151个建议"
        android:onClick="toI151Suggest"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdi_i151suggest_btn"
        android:layout_alignParentStart="true"
        android:text="@string/sds_btn_howtohandleexception"
        android:onClick="toHowToHandleException"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:text="@string/sds_btn_howtousehandler"
        android:onClick="toHowToUseHandler"/>

</RelativeLayout>
